<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<GridPane hgap="5.0" prefHeight="300.0" prefWidth="400.0" vgap="10.0" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="retrospector.fxml.preferences.PreferencesController">
   <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
      <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" prefWidth="100.0" />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
   </rowConstraints>
   <children>
      <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Preferences" GridPane.columnSpan="2">
         <font>
            <Font name="Aroania" size="34.0" />
         </font>
      </Text>
      <Text strokeType="OUTSIDE" strokeWidth="0.0" text="View Past X Days" GridPane.rowIndex="5" />
      <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Github User" GridPane.rowIndex="6" />
      <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Categories" GridPane.rowIndex="3" />
      <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Default User" GridPane.rowIndex="1" />
      <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Default Rating" GridPane.rowIndex="2" />
      <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Factoids" GridPane.rowIndex="4" />
      <TextField fx:id="txtDefaultUser" GridPane.columnIndex="1" GridPane.rowIndex="1" />
      <TextField fx:id="txtDefaultRating" GridPane.columnIndex="1" GridPane.rowIndex="2" />
      <TextField fx:id="txtCategories" GridPane.columnIndex="1" GridPane.rowIndex="3" />
      <TextField fx:id="txtFactoids" GridPane.columnIndex="1" GridPane.rowIndex="4" />
      <TextField fx:id="txtPastDays" GridPane.columnIndex="1" GridPane.rowIndex="5" />
      <TextField fx:id="txtGithubUser" GridPane.columnIndex="1" GridPane.rowIndex="6" />
      <HBox alignment="TOP_RIGHT" spacing="5.0" GridPane.columnSpan="2" GridPane.rowIndex="7">
         <children>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="*Some changes may require a restart">
               <font>
                  <Font size="9.0" />
               </font>
            </Text>
            <Button mnemonicParsing="false" onAction="#save" text="Save" />
            <Button mnemonicParsing="false" onAction="#cancel" text="Cancel" />
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</GridPane>
